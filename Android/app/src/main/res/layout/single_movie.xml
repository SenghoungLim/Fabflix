<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

    <TextView
            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:id="@+id/movieYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/movieTitle"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

    <TextView
            android:id="@+id/movieDirectorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director:"
            android:textSize="18sp"
            android:layout_below="@id/movieYear"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:id="@+id/movieDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/movieDirectorLabel"
            android:layout_marginBottom="16dp"/>

    <TextView
            android:id="@+id/movieStarsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stars:"
            android:textSize="18sp"
            android:layout_below="@id/movieDirector"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:id="@+id/movieStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/movieStarsLabel"
            android:layout_marginBottom="16dp"/>

    <TextView
            android:id="@+id/movieGenresLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genres:"
            android:textSize="18sp"
            android:layout_below="@id/movieStars"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:id="@+id/movieGenres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/movieGenresLabel"
            android:layout_marginBottom="16dp"/>
</RelativeLayout>
